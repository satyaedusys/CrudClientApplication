@using CrudClientApplication.Models;
@model GetjoinlistResponse
@{
    ViewData["Title"] = "OrderDetails";
}

<div class="container">
    <div class="pb-4">
        <div class="col-md-6">
            <h4 class="text-center text-primary">Customer Record</h4>
         
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered">
                <tr class="text-center" style="background-color:dodgerblue">
                    <th>OrderId</th>
                    <th>CustomerName</th>
                    <th>Address</th>
                    <th>OrderNumber</th>
                    <th>OrderDetials</th>
                </tr> 

                @if (Model != null)
                {
                    @foreach (var data in Model.CustomerList)
                    {
                        <tr class="text-center">
                            <td>@data.OrderId</td>
                            <td>@data.CustomerName</td>
                            <td>@data.Address</td>
                            <td>@data.OrderNumber</td>
                            <td>@data.OrderDetials</td>
                        </tr>
                     
                    }
                }
        </table>

    </div>
    <b>@ViewBag.message</b>
    <div>
        <a asp-action="Index">Back to CustomerList</a>
    </div>
    
</div>



